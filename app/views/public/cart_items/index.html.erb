<% @test = 0 %>
<!--<div class="cart_container" style="width:90%; margin: 20px auto; position:relative;">-->
	<div class="container">
    <div class="row">
      <h2 class="text-center md-50">ショッピングカート</h2>
      <%= link_to cart_items_destory_all_path, method: :delete do %>
		<span class="btn btn-danger">カートを空にする</span>
	  <% end %>

    </div>

	  	<table class="table table-bordered cart-table">
			  <thead class="thead-light">
				  <tr style="background-color:#F5F5F5;">
					  <th>商品名</th>
					  <th>単価(税込)</th>
					  <th>数量</th>
					  <th>小計</th>
					  <th>&nbsp;</th>
				  </tr>
			  </thead>
			  <tbody>
			   <% @cart_items.each do |cart_item| %>
			  	<tr>
			  		<td>
			  			<%= cart_item.item.name %>
			  		</td>
			  		<td>
			  			<%= (cart_item.item.sub_price * 1.1).round %>
			  		</td>
			  		<td>
			  			<%= form_with(model: cart_item, url: cart_items_path, method: :post, local: true) do |f| %>
		          <%= f.number_field :quantity, min: 1, max: 100, placeholder: '個数選択', class:"quantity-select-form" %>
		          <!--<#%= f.hidden_field :id, :value => @item.id %>-->
		          <%= f.submit "変更", class: "btn btn-primary" %>
		          <% end %>
			  		</td>
			  		<td>
			  			<%= @test_secod = (cart_item.item.sub_price * cart_item.quantity).round %>
			  			<%@test += @test_secod %>
			  		</td>
			  		<td>
			  			<%= button_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
			  		</td>
			  	</tr>
			  	<% end %>
			  </tbody>
			</table>
			<div class = "d-flex justify-content-between">
			  <%= button_to "買い物を続ける",root_path, method: :get, class: "btn btn-primary" %>
			  <table class = "table table-bordered col-md-4">
				  <tr>
				  <td>合計金額</td>
				  <td><%= @test %></td>
				  </tr>
		    </table>
			</div>
			<div class = "d-flex justify-content-center">
				<%= button_to "情報入力に進む", new_order_path, method: :get, class: "btn btn-success" %>
			</div> 
	  </div>
  </div>
</div>