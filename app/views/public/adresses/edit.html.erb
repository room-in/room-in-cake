<div class="container">
 　<!--エラーメッセージ表示-->
 　<%= render 'public/error.msg', object: @adress %>

  <div class="my-3">
    <h4>配送先編集</h4>
  </div>

  <%= form_with model:@adress,local:true do |f| %>
  <table class="form">
    <tbody>
      <tr class="form-group row ml-3">
        <td class="col-md-3"><%= f.label :郵便番号 %></td>
        <td class="col-md-4"><%= f.text_field :postal_code, class: "form-control" %></td>
      </tr>
      <tr class="form-group row ml-3">
          <td class="col-md-3"><%= f.label :住所 %></td>
          <td class="col-md-9"><%= f.text_field :delivery, class: "form-control" %></td>
      </tr>
      <tr class="form-group row ml-3">
          <td class="col-md-3"><%= f.label :宛名 %></td>
          <td class="col-md-4"><%= f.text_field :name, class: "form-control" %></td>
      </tr>
    </tbody>
  </table>

  <div class="form_btn">
    <div class="col-md-3"></div>
    <div class="col-md-4 offset-md-4"><%= f.submit "変更内容保存", class: "btn btn-success" %></div>
  </div>
  <% end %>

</div>