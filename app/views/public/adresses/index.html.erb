<div class="container">
  <div class="my-3">
    <h4>配送先登録/一覧</h4>
  </div>

  <%= form_with model:@adress,local:true do |f| %>
    <table class="form">
      <tbody>
        <tr class="form-group row">
          <td class="col-md-3"><%= f.label :郵便番号 %></td>
          <td class="col-md-4"><%= f.text_field :postal_code, class: "form-control" %></td>
        </tr>
        <tr class="form-group row">
          <td class="col-md-3"><%= f.label :住所 %></td>
          <td class="col-md-9"><%= f.text_field :delivery, class: "form-control" %></td>
        </tr>
        <tr class="form-group row">
          <td class="col-md-3"><%= f.label :宛名 %></td>
          <td class="col-md-4"><%= f.text_field :name, class: "form-control" %></td>
        </tr>
      </tbody>
    </table>
        <div class="form-btn">
          <!--<div class="col-md-3"></div>-->
          <div class="col-md-4 offset-md-3"><%= f.submit "新規登録", class:"btn btn-success" %></div>
        </div>

  <% end %>

  <table border="1" >
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.postal_code %></td>
        <td><%= adress.delivery %></td>
        <td><%= adress.name %></td>
        <td>
          <%= link_to '編集', edit_adress_path(adress.id), class:"btn btn-success" %>
          <%= link_to '削除', adress_path(adress), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>