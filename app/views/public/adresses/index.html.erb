<div class="container">
  <h4>配送先登録/一覧</h4>
  <%= form_with model:@adress,local:true do |f| %>
    <table>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td><%= f.text_field :delivery, :size => "60*30" %></td>
      </tr>
      <tr>
        <td><%= f.label :宛名 %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr class="actions">
        <td><%= f.submit "新規登録" %></td>
      </tr>
    </table>
  <% end %>
  
  <table border="1">
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.postal_code %></td>
        <td><%= adress.delivery %></td>
        <td><%= adress.name %></td>
        <td>
          <%= link_to '編集', edit_adress_path(adress.id) %> 
          <%= link_to '削除', adress_path(adress), method: :delete, data: { confirm: '本当に消しますか？' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>