<div class="container">
      <h2>注文履歴詳細</h2>

<div class = "row">

      <div>
         <div>注文情報</div>
        <table class="table-bordered">

          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y/%m/%d")%></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                 <%= @order.full_delivery %>
              </td>
            </tr>
            <tr>
              <td>支払い方法</td>
              <td>
                <% if @order.pay_selection == false %>
                クレジットカード
                <% else %>
                銀行振込
                <% end %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.order_status %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="ml-5">
        <div>請求情報</div>
 <table class="table-bordered">

          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= @order.total_price %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td>800</td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_price.to_i + 800 %></td>
            </tr>
          </tbody>
        </table>
      </div>
      </div>


  <div class="row mt-5">
      <strong>注文内容</strong>
  </div>

  <div class>
      <table class="table-bordered col-lg-12">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @orderitems.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.item.name %></td>
            <td><%= item.item.sub_price %></td>
            <td><%= item.quantity %></td>
            <td><%= item.item.sub_price.to_i * item.quantity.to_i %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
  </div>

</div>