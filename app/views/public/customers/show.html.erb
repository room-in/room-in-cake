<div class="container">
  <div class="my-3">
    <h3>マイページ</31>
  </div>

  <div class="my-10">
    <h4>登録情報</h4>
  </div>
  <table border="1">
    <tr>
      <td class="col-md-2">氏名</td>
      <td><%= (@customer.fast_name + @customer.second_name) %></td>
    </tr>
    <tr>
      <td class="col-md-2">カナ</td>
      <td><%= (@customer.kana_fast_name + @customer.kana_second_name) %></td>
    </tr>
    <tr>
      <td class="col-md-2">郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td class="col-md-2">住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="col-md-2">電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td class="col-md-2">メールアドレス</td>
    　<td><%= @customer.email %></td>
    </tr>
  </table>

  <div class="row my-4 ml-3">
    <h6><%= link_to '登録情報を編集する', edit_customer_path(@customer.id), class: "btn btn-primary"%></h6>
  </div>

  <div class="row ml-3">
    <h6><%= link_to '配送先一覧を見る', adresses_path, class: "btn btn-primary" %></h6>
  </div>

  <div class="row my-4 ml-3">
    <h6><%= link_to '注文履歴一覧を見る', orders_path, class: "btn btn-primary" %></h6>
  </div>

</div>