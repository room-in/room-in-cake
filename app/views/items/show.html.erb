
<div class="row login-row">
	<div class="col-xs-offset-1">
		<div class="item-image">
			<%= attachment_image_tag(@item, :image, fallback: "no_image.jpg",size: "300x217" ) %>
		</div>
	</div>
	<div class="col-xs-5">
		<div class="detail">
			<h2><%= @item.name %></h2>
			<p><%= @item.text %></p>
			<h3 class="item-price">￥<%= (@item.sub_price * 1.1).round %><span>（税込）</span></h3>
			<%= form_with(model: @cart_items, url: cart_items_path, method: :post, local: true) do |f| %>
		      <%= f.label :quantity, "個数選択" %>
		      <%= f.number_field :quantity, min: 1, max: 100, placeholder: '個数選択', class:"quantity-select-form" %>
		      <%= f.hidden_field :id, :value => @item.id %>
		      <%= f.submit "カートに入れる", class: "btn btn-primary" %>
		    <% end %>
		</div>
	</div>
</div>
