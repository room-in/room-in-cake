<div class="container">
  <div class="row">
		<h1>注文履歴詳細</h1>
	</div>
		<div class="col-md-10">
		  
		<table>
			<tr>
				<td><strong>購入者</strong></td> 
				<td><%= @order.address %></td>
			</tr>
			<tr>
				<td><strong>注文日</strong></td>
				<td></td>
			</tr>
			
			<tr>
        <td><strong>配達先</strong></td>
        <td><%= '〒' + @order.postal_code %></td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
      	<td></td>  
        <td><%= @order.name %></td>
    　</tr>
    　<tr>
    　	<td><strong>支払い方法</strong></td>
    　	<td>
        <% if @order.pay_selection == false %>
          クレジットカード
        <% else %>
          銀行振込
        <% end %>
      </td>
    　</tr>
    　<tr>
    　	<td><strong>注文ステータス</strong></td>
    　</tr>
		</table>  
		 
		  
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_item.each do |order_item| %>
						<tr>
							<td></td>
							<td> <%= order_item.quantity %></td>
							<td></td>
							<td></td>
							<td>
								<%= f.select :make_status, [['1', 0], ['2', 1], ['3', 2],['4', 3]] %> %>
							</td>
							<td><%= f.submit '更新' %>
								<br></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			   <div class="col-1"></div>
        <table class="table col-3 table-borderless">
          <tr>
            <td >商品合計</th>
            <td <%=  %>円</td>
          </tr>
          <tr>
            <td >送料</td>
            <td ><%=  %></td>
          </tr>  
          <tr>
            <td >請求金額合計</td>
            <td ><%=  %>円</td>
          </tr>
        </table>
      </div>
</div>