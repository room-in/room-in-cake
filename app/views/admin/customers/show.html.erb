    <div class="container">
      <h3>の会員詳細</h3>
      <table>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.fast_name %> <%= @customer.second_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_fast_name %> <%= @customer.kana_second_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <!--もし@customerのis_deletedに入っているデータがtrueだったら？-->
              <!--有効と表示そうでない時は、無効と表示する-->
              <% if @customer.is_deleted ==　true %>
               <p class="custome_validity">有効</p>
              <% else%>
               <p class="custome_Invalid">無効</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>