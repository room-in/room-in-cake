    <div class="container">
      <h3><%= (@customer.fast_name + @customer.second_name) %>の会員詳細</h3>
      <table class="form">
        <tbody>
          <tr>
            <td class="col-md-3">会員ID</td>
            <td class="col-md-4"><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="col-md-3">氏名</td>
            <td class="col-md-4"><%= (@customer.fast_name + @customer.second_name) %></td>
          </tr>
          <tr>
            <td class="col-md-3">フリガナ</td>
            <td class="col-md-4"><%= (@customer.kana_fast_name + @customer.kana_second_name) %></td>
          </tr>
          <tr>
            <td class="col-md-3">郵便番号</td>
            <td class="col-md-4"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="col-md-3">住所</td>
            <td class="col-md-9"><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="col-md-3">電話番号</td>
            <td class="col-md-4"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="col-md-3">メールアドレス</td>
            <td class="col-md-4"><%= @customer.email %></td>
          </tr>
          <tr>
            <td class="col-md-3">会員ステータス</td>
            <td class="col-md-4">
              <!--もし@customerのis_deletedに入っているデータがtrueだったら？-->
              <!--有効と表示そうでない時は、無効と表示する-->
              <% if @customer.is_deleted == false %>
               <p class="custome_validity">有効</p>
              <% else%>
               <p class="custome_Invalid">無効</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="form_btn">
        <div class="row">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
          <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>