<div class="container">
  <div class="row">
    <div class="col-lg-12">
			<h1 class="title">注文履歴一覧</h1>
			<table class="table">
			  <thead>
  			  <tr>
  						<th>購入日時</th>
  						<th>購入者</th>
  						<th>注文個数</th>
  						<th>注文ステータス</th>
  				</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>

						<td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"),admin_order_item_path(order) %> </td>
						<td><%= order.customer.full_name %></td>
						<td><%= order.order_items.sum(:quantity) %></td>
						<td><%= order.order_status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<%= paginate @orders %>
    </div>
  </div>
</div>