<div class="container">
  <div class="row">
  <h2>ジャンル一覧・追加</h2>
  </div>

  <%= form_for(@genre, url:'/admin/genres') do |f| %>

            <p>ジャンル</p>
            <%= f.text_field :name %>
            <%= f.submit "追加", class: "btn btn-info" %>
          </div>
        <% end %>
      <div class="col-xs-8 col-xs-offset-2">
        <table class="table table-hover table-inverse">
          <thead>
            <tr class="info">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td class="text-left"><%= genre.name%></td>
                <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

