<div class="container">
  <div class="row">
    
      <h2>注文履歴一覧</h2>
    </div>
  </div>

  <div class="row mt-3">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% .each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td>
                <%= "〒"  %>
              </td>
              <td>
                <%= item_name %><br>
                
              </td>
              <td><%= order.total_price %></td>
              <td><%= order.order_status %></td>

              <td><%=link_to "表示する", order_path(order), class: "btn btn-sm btn-outline-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>