<div class="container">
  <div class="row">
    <h2>ログイン</h2>
  </div>
  
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "60*30" %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="field">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password", :size => "60*30" %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    </div>
  <% end %>
  
  <div class="form-group row">
    <P>会員登録がお済みではない方</P>
  </div>
  <div class="form-group row">
    <%= render "devise/shared/links" %>から新規登録を行ってください
  </div>
</div>